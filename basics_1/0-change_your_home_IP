#!/usr/bin/env bash
# my comment

if [[ $EUID -ne 0 ]]; then
   echo "Please run as root or use sudo"
   exit 1
fi

# Backup hosts file
cp /etc/hosts /etc/hosts.bak

# Update localhost line to 127.0.0.2 if exists, else append it
if grep -q '^127\.0\.0\.1\s\+localhost' /etc/hosts; then
    sed -i 's/^127\.0\.0\.1\s\+localhost/127.0.0.2 localhost/' /etc/hosts
else
    echo "127.0.0.2 localhost" >> /etc/hosts
fi

# Remove any existing facebook.com line
sed -i '/facebook\.com/d' /etc/hosts

# Add facebook.com line
echo "8.8.8.8 facebook.com" >> /etc/hosts
