#!/usr/bin/env bash
# my comment

# Backup original hosts file
cp /etc/hosts /etc/hosts.bak

# Create a temp file
tmpfile=$(mktemp /tmp/hosts.XXXXXX)

# Remove lines containing localhost or facebook.com, output to temp file
grep -v -e 'localhost' -e 'facebook.com' /etc/hosts > "$tmpfile"

# Add new entries
echo "127.0.0.2 localhost" >> "$tmpfile"
echo "8.8.8.8 facebook.com" >> "$tmpfile"

# Move temp file back to /etc/hosts (requires sudo if not root)
mv "$tmpfile" /etc/hosts
